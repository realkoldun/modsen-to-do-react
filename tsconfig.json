{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@constants":  ["src/constants"],
      "@components": ["src/components"],
      "@pages": ["src/pages"],
      "@assets": ["src/assets"],
      "@": ["."]
    },
    "alwaysStrict": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"]
}